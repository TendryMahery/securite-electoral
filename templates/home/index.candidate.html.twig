{% extends 'base.html.twig' %}

{% block title %}
    E-fidy - Lisitra
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1 class="mb-4 text-4xl text-center font-extrabold text-gray-600 md:text-5xl lg:text-6xl dark:text-gray mt-8 ">Lisitrin'ny kandida ho fidiana</h1>

<div class="px-3 md:lg:xl:px-40 border-t border-b py-20 bg-opacity-10" style="background-image: url('https://www.toptal.com/designers/subtlepatterns/uploads/dot-grid.png') ;">
 
    <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 border ">
        {% for candidate in candidates %}
        <div class="max-w-md py-4 px-8 shadow-lg rounded-lg my-20">
            <div class="flex justify-center md:justify-end -mt-16">
            <img class="w-40 h-40 object-cover rounded-full border-2 border-indigo-500" src="https://images.unsplash.com/photo-1499714608240-22fc6ad53fb2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=334&q=80">
            </div>
            <div>
                <h2 class="text-gray-800 text-3xl font-semibold">{{candidate.numberList}}</h2>
                <h2 class="text-gray-800 text-3xl font-semibold">{{candidate.name}} </h2>
                <h2 class="text-gray-800 text-3xl font-semibold">{{candidate.firstname}}</h2>
                <p class="mt-2 text-gray-600">Lorem ipsum dolor sit amet consectetur adipisicing elit.
                     Quae dolores deserunt ea doloremque natus error
                </p>
                <hr class="mt-3 border-b-1 border-gray-200">
                <form method="POST" action="{{ path('vote_candidat') }}">
                    <input type="hidden" name="_president" value="{{ candidate.numberList }}">
                    <input type="hidden" name="_electeur" value="{{ electeur.id }}">
                <div class="flex justify-center items-center py-2 mt-3 text-sm font-medium">
                    <button type="submit" class="text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200  font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">FIDIKO</button>
                </div>
                </form>
            </div>
            <div class="flex justify-end ">
                <a href="#" class="text-xl font-medium text-indigo-500">Mombamomba Azy</a>
            </div>
        </div>
        {% endfor %}


    </div>
</div>
    {% include 'component/footer.html.twig' %}



<!-- </div> -->
{% endblock %}
